<html>
    <head>
        <link rel="stylesheet" type="text/css" href="style.css">
        <script src="https://kit.fontawesome.com/377c62b438.js" crossorigin="anonymous"></script>
    </head>
    <body>
        <div id = "main">
            <h2>TODO APP</h2>
            <hr>
            <form action="/create-todo" method="post">
                <label id="label1" for="description">DESCRIPTION</label>
                <input id="des" type="text" name="description" placeholder="What do you need to do?">
                <hr>
                <p id = "cat">CATEGORY</p>

                        <select name="category" id="Cat-list" required>
                            <option value="CC">Choose a Category</option>
                            <option value="Personal">Personal</option>
                            <option value="Work">Work</option>
                            <option value="School">School</option>
                            <option value="Other">Other</option>
                        </select>
                        <label id = "da">DUE DATE</label>
                        <input type="date" name="date" id="date" required>
                <hr>
                <button type="submit" id = "btn1"><i class="fa-solid fa-plus"></i>Add Task</button>
            </form>
              <a id="btn2" href="/delete-tasks/">
                  <button type="submit" id = "task-action"><i class="fa-solid fa-trash-can"></i>Delete Task</button>                
              </a>
            <hr>

            <div id = "LIST">
                <% for(let i of todo_list){ %>
                    <a href="/task-done/<%=i.id%>">
                    <div id = "nm">
                        <%if(i.workdone){%>
                            <input id = "chklist" type="checkbox" checked>                                    
                            <%}else{%>
                                <input id = "chklist" type="checkbox">
                                <%}%>
                                <span id = "descrip"><%= i.description %></span>
                            </div>
                            <span id = "cate"><%= i.category %></span>
                            <div id = "ddate">
                                <i class="fa-solid fa-calendar-days"></i> <%= i.date %>
                            </div>
                            <hr>
                        </a>
                            <% } %>
                        </div>
    </body>
</html>